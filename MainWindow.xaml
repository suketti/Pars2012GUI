<Window x:Class="Pars2012GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pars2012GUI"
        mc:Ignorable="d"
        Title="London 2012 - Férfi kalapácsvetés - selejtező" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid Margin="20px">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ComboBox x:Name="cbVersenyzo" Margin="30px" SelectionChanged="cbVersenyzo_SelectionChanged"/>
        <StackPanel Grid.Row="1" Margin="10px">
            <Label x:Name="lblVersenyzoNev"/>
            <Label x:Name="lblVersenyzoCsoport"/>
            <Label x:Name="lblVersenyzoNemzet"/>
            <Label x:Name="lblVersenyzoNemzetKod"/>
            <Label x:Name="lblVersenyzoSorozat"/>
            <Label x:Name="lblVersenyzoEredmeny"/>
        </StackPanel>
        <Image x:Name="imgVersenyzoZaszlo" Grid.Row="2" Width="200px" Height="100px"/>
    </Grid>
</Window>
